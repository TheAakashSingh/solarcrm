# Docker Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=solarsync
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=solarsync_db
POSTGRES_PORT=5432

# If using external database, set this instead
# DATABASE_URL=postgresql://username:password@host:5432/database_name?schema=public

# ============================================
# Backend Configuration
# ============================================
NODE_ENV=production
BACKEND_PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# Frontend Configuration
# ============================================
# Frontend container internal port (Docker): 80
# Frontend container exposed port (Host): 8080 (change if needed)
FRONTEND_PORT=8080
# These will be used during build time (use your domain)
VITE_API_BASE_URL=https://crm.singhjitech.com/api
VITE_SOCKET_URL=https://crm.singhjitech.com

# ============================================
# CORS Configuration
# ============================================
# Frontend URL for CORS (use your domain)
FRONTEND_URL=https://crm.singhjitech.com

